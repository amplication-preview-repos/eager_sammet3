datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model House {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  location  String?
  devices   Device[]
}

model Device {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  typeField  String?
  name       String?
  properties Json?
  house      House?   @relation(fields: [houseId], references: [id])
  houseId    String?
}
